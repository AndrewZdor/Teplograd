CREATE TRIGGER trigger_Entities_biu
BEFORE INSERT, UPDATE
ON Entities
REFERENCING NEW AS newrow
FOR EACH ROW

BEGIN
	DECLARE EntityIdTemp integer ;

	SELECT table_id
	INTO EntityIdTemp
	FROM sys.systab
	WHERE table_name = newrow.Code ;

	SET newrow.Table_Id_ = EntityIdTemp;

END;

