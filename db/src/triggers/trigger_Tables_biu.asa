CREATE OR REPLACE FUNCTION trg_Entities_biu 
RETURNS trigger AS
$body$
BEGIN
    NEW.UpdateTS := LOCALTIMESTAMP;
    NEW.UpdateUserId := current_user;
    RETURN NULL;
END;
$body$
LANGUAGE 'plpgsql'
VOLATILE
CALLED ON NULL INPUT
SECURITY DEFINER
COST 100;

